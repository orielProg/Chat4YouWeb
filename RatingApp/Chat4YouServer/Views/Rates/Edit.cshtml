@model Chat4YouServer.Models.Rate

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-light align-middle">Edit</h1>

<h4 class="text-light align-middle" >Rate</h4>
<hr />
<div class="row text-light">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Stars" class="control-label"></label>
                <div class="col-lg-12">
                    <input asp-for="Stars" id="input-21a" value="0" type="number" class="rating-stars" data-symbol="*" min=0 max=5 step=1 data-size="xl">
                    <span asp-validation-for="Stars" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Feedback" class="control-label"></label>
                <textarea asp-for="Feedback" class="form-control ml-1 shadow-none textaeria"></textarea>
                <span asp-validation-for="Feedback" class="text-danger"></span>
            </div>
              <div class="form-group">
                <input type="hidden" asp-for="Name" class="form-control" />
             </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
